<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
  <meta content="" name="description" />
  <meta content="" name="author" />
  <link rel="apple-touch-icon" sizes="76x76" href="../img/favicon.ico">
  <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">
  <link rel="icon" href="../img/favicon.ico" type="image/x-icon">
  <title><%=process.env.PKG_NAME%></title>

  <!-- ================== BEGIN core-css ================== -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
  <link href="/assets/css/vendor.min.css" rel="stylesheet" />
  <link href="/assets/css/default/app.addon.css" rel="stylesheet" />
  <link href="/assets/css/default/app.min.css" rel="stylesheet" />
  <!-- required files -->
  <link href="/assets/plugins/ionicons/css/ionicons.min.css" rel="stylesheet" />
</head>
<body class='pace-top' class="theme-orange">
	<!-- BEGIN #loader -->
	<div id="loader" class="app-loader">
		<span class="spinner"></span>
	</div>
	<!-- END #loader -->
	<!-- BEGIN #app -->
	<div id="app" class="app">
		<!-- BEGIN login -->
		<div class="login login-with-news-feed">
			<!-- BEGIN news-feed -->
			<div class="news-feed">
				<div class="news-image" style="background-image: url(/assets/img/login-bg/login-bg-2.jpg)"></div>
				<div class="news-caption">
					<h4 class="caption-title"><b><%=process.env.PKG_NAME%></b> App</h4>
					<p>						
            Get started with your project management dashboard Right Now.
					</p>
				</div>
			</div>
			<!-- END news-feed -->
			
			<!-- BEGIN login-container -->
			<div class="login-container">
				<!-- BEGIN login-header -->
				<div class="login-header mb-30px">
					<div class="brand">
						<div class="d-flex align-items-center">
							<!-- <span class="logo"></span> -->
							<b><%=process.env.PKG_NAME%></b>
						</div>
					</div>
					<div class="icon">
						<i class="fa fa-sign-in-alt"></i>
					</div>
				</div>
				<!-- END login-header -->

				<!-- BEGIN login-content -->
				<div class="login-content">
          <form method="post" id="loginForm" action="return false">
						<div class="form-floating mb-15px">
							<input type="text" class="form-control h-45px fs-13px" required name="account" value="" placeholder="ID" />
							<label for="emailAddress" class="d-flex align-items-center fs-13px text-gray-600">ID</label>
						</div>
						<div class="form-floating mb-15px">
							<input type="password" class="form-control h-45px fs-13px" required name="password" value="" placeholder="Password" />
							<label for="password" class="d-flex align-items-center fs-13px text-gray-600">Password</label>
						</div>
						<div class="mb-15px">
							<button type="button" class="btn btn-success d-block h-45px w-100 btn-lg fs-14px" onclick="wasUtils.doLogin(this.form);">Login</button>
						</div>
						<hr class="bg-gray-600 opacity-2" />
						<div class="text-gray-600 text-center mb-0">
							<%-process.env.TEAM_NAME%>
						</div>
					</form>
				</div>
				<!-- END login-content -->
			</div>
			<!-- END login-container -->
		</div>
		<!-- END login -->
		
		
		<!-- BEGIN scroll to top btn -->
		<a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top" data-toggle="scroll-to-top"><i class="fa fa-angle-up"></i></a>
		<!-- END scroll to top btn -->
	</div>
	<!-- END #app --> 
  
	<!-- ================== BEGIN core-js ================== -->
	<script src="/assets/js/vendor.min.js"></script>
  <script src="/assets/js/utils.js"></script>
  <!--script src="/assets/js/app.min.js"></script-->
  <script src="/assets/js/app.js?v=<%=Date.now()%>"></script>
  <script src="/assets/js/app.addon.js?v=<%=Date.now()%>"></script>
	<!-- ================== END core-js ================== -->
	  
  <script>

    window.addEventListener('DOMContentLoaded', (event) => {

      $('input[name=account]').keyup((e)=>{
        if (e.keyCode == 13) {
          $('input[name=password').focus();
        }
      });

      $('input[name=password').keyup((e)=>{
        
        if (e.keyCode == 13) {
          wasUtils.do_login(e.currentTarget.form);
        }
      });

    });

  </script>
</body>

</html>
